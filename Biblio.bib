@Article{Souza2019,
  author     = {Souza, Tiago Oliveira de and Souza, Edinilsa Ramos de and Pinto, Liana Wernersbach},
  title      = {Análise da qualidade da informação sobre mortalidade por homicídio a partir dos óbitos com intenção indeterminada. Bahia, Brasil, 2002-2013},
