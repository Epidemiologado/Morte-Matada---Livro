@Article{Gonzalez2016,
  author   = {González, Arango and Alejandra, María and Jaramillo Morales, Juan Diego and Jaramillo Escobar, Lucas},
  title    = {Técnicas de clustering para detectar padrões espaciais de criminalidade em jovens e adultos em Medellín. Outubro de 2013 a novembro de 2014},
