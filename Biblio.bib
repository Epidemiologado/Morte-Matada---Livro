  keywords        = {Adolescente,Adulto,Adulto Jovem,Brasil/epidemiologia,Demografia,Fatores Socioecon{\^{o}}micos,Feminino,Grupo com Ancestrais do Continente Africano,Grupo com Ancestrais do Continente Europeu,Grupos de Popula{\c{c}}{\~{o}}es Continentais,Homic{\'{i}}dio/estat{\'{i}}stica {\&}amp,Humanos,Masculino,Mortalidade/tend{\^{e}}ncias,Pessoa de Meia-Idade,Popula{\c{c}}{\~{a}}o Urbana,dados num{\'{e}}ricos},
  language        = {en},
  mendeley-groups = {Homicidio Espacial},
  url             = {http://www.scielo.br/scielo.php?script=sci{\_}arttext{\&}pid=S1415-790X2010000400001},
}

