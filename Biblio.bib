  keywords = {Acidentes/mortalidade, Homicídio/estatística & dados numéricos, Suicídio/estatística & dados numéricos, Violência/estatística & dados numéricos, Causas de Morte, Colômbia, Economia, Fatores de Tempo, População Urbana, Humanos},
  refid    = {-525124},
  url      = {es},
}

@Article{Bastos2009a,
